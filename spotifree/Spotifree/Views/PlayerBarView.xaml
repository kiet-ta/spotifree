<UserControl x:Class="Spotifree.Views.PlayerBarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Spotifree.Views"
        mc:Ignorable="d"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="80" Background="#1c1c1c" Width="1100">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style TargetType="TextBlock" x:Key="ArtistText" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
            <Setter Property="Foreground" Value="Gray" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10,0,10,0" Height="58">
            <TextBlock Text="{Binding CurrentTrack.Title, FallbackValue='Not Playing'}" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrentTrack.Artist, FallbackValue='...'}" Foreground="Gray"/>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="80" Width="367">
            <StackPanel Orientation="Horizontal" Width="152">

                <Button Style="{StaticResource MaterialDesignIconButton}" Margin="5" Command="{Binding SkipPreviousCommand}">
                    <iconPacks:PackIconMaterial Kind="SkipPrevious" />
                </Button>

                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                        Command="{Binding PlayPauseCommand}" Width="40" Height="40" Margin="5">
                    <iconPacks:PackIconMaterial 
                        Kind="{Binding IsPlaying, Converter={StaticResource PlayPauseIconKindConverter}}" />
                </Button>

                <Button Style="{StaticResource MaterialDesignIconButton}" Margin="5" Command="{Binding SkipNextCommand}">
                    <iconPacks:PackIconMaterial Kind="SkipNext" />
                </Button>
            </StackPanel>
            <Slider Width="300" Minimum="0" 
        Maximum="{Binding Duration, FallbackValue=100}" 
        Value="{Binding CurrentPosition, Mode=OneWay}"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,68,0" Height="26">
            <iconPacks:PackIconMaterial Kind="VolumeHigh" Foreground="White" VerticalAlignment="Center" Margin="5"/>
            <Slider Width="154" 
                    Minimum="0.0" 
                    Maximum="1.0" 
                    Value="{Binding Volume, Mode=TwoWay}"
                    RenderTransformOrigin="0.498,0.45" Height="21" />
        </StackPanel>
        <Button Style="{StaticResource MaterialDesignIconButton}"
        ToolTip="Chuyển sang Mini Player"
        
        Command="{Binding SwitchToMiniModeCommand}" Grid.Column="2" Margin="299,16,20,16"
        >
            <iconPacks:PackIconMaterial Kind="ArrowCollapse" Height="36" Width="36" />
        </Button>
    </Grid>
</UserControl>
