    <Window x:Class="spotifree.MusicDetail"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:spotifree"
            xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        
        
            mc:Ignorable="d"
            Title="Ứng lần và sao và Radio" Height="700" Width="1200"
            Background="#FF2A2A2A"
            WindowStartupLocation="CenterScreen"
            WindowStyle="None"
            AllowsTransparency="True"
            ResizeMode="CanResize" 
            Loaded="Window_Loaded">

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Cột 1: Thư viện (WPF) - Có thể thu gọn -->
                <ColumnDefinition x:Name="LibraryColumn" Width="250"/>
                <!-- Cột 2: Trình phát nhạc (WebView2) -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CỘT 1: THƯ VIỆN BÀI HÁT (Điều khiển bằng WPF) -->
            <Border Grid.Column="0" Background="#f0f0f0" BorderBrush="#ccc" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Thư viện" FontWeight="Bold" FontSize="16" Margin="5,0"/>
                            <!-- NÚT ẨN/HIỆN ĐÃ BỊ XÓA KHỎI ĐÂY -->
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <!-- NÚT REFRESH -->
                            <Button Content="Tải lại Thư viện" 
                                Command="{Binding RefreshCommand}" 
                                Margin="5,0" Padding="5,2" HorizontalAlignment="Left"/>
                            <Button Content="Phát Tất Cả" 
                                Command="{Binding PlayAllCommand}" 
                                Margin="5,0" Padding="5,2" Background="#1DB954" Foreground="White" HorizontalAlignment="Left"/>
                        </StackPanel>

                    </StackPanel>

                    <!-- Danh sách nhạc -->
                    <ListView Grid.Row="1" ItemsSource="{Binding Songs}" 
                          SelectedItem="{Binding CurrentSong, Mode=TwoWay}"
                          Margin="5"
                          x:Name="WpfSongListView" 
                          SelectionMode="Extended">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Artist}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- NÚT THÊM VÀO PLAYLIST MỚI -->
                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Add to Playlist" 
                            Command="{Binding AddSelectedToPlaylistCommand}" 
                            CommandParameter="{Binding ElementName=WpfSongListView, Path=SelectedItems}"
                            Margin="5" Padding="10,5" Background="#1D89E4" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CỘT 2: TRÌNH PHÁT NHẠC (WebView2) -->
            <!-- *** SỬA LỖI: BỌC WEBVIEW VÀ NÚT BẤM VÀO TRONG 1 GRID *** -->
            <Grid Grid.Column="1">

                <!-- WebView2 nằm bên dưới -->
                <wv2:WebView2 Name="webView"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>

                <!-- Nút Ẩn/Hiện đã được XÓA KHỎI ĐÂY -->

            </Grid>
        </Grid>
    </Window>
