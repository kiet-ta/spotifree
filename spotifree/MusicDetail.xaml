<Window x:Class="spotifree.MusicDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spotifree"
        mc:Ignorable="d"
        Title="Ứng lần và sao và Radio" Height="700" Width="1200"
        Background="#FF2A2A2A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PlayerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="CustomSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Window Controls Bar -->
        <Grid Height="40" VerticalAlignment="Top" Background="#FF1A1A1A">
            <TextBlock Text="Ứng lần và sao và Radio" 
                      FontSize="12" 
                      Foreground="#FF999999"
                      VerticalAlignment="Center"
                      Margin="15,0,0,0"/>

            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,0,10,0">
                <Button Content="🔍" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="14"
                       x:Name="btnSearch"/>
                <Button Content="—" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       x:Name="btnMaximize"
                       Click="BtnMaximize_Click"/>
                <Button Content="⬜" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="14"
                       x:Name="btnMinimize"
                       Click="BtnMinimize_Click"/>
                <Button Content="✕" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       x:Name="btnClose"
                       Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="0,40,0,100">
            <!-- Album Art Display -->
            <Border Width="380" Height="380" 
                   Background="White"
                   CornerRadius="10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" 
                                    ShadowDepth="0" 
                                    Opacity="0.5" 
                                    Color="Black"/>
                </Border.Effect>

                <Grid>
                    <!-- Placeholder for Album Art -->
                    <Image x:Name="imgAlbumArt" 
                          Stretch="UniformToFill"
                          />

                    <!-- Overlay Text (if needed) -->
                    <Grid Background="#99000000" 
                         Visibility="Collapsed"
                         x:Name="overlayGrid">
                        <StackPanel VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                            <TextBlock Text="CHUYỆN CHÚNG TA SAU NÀY" 
                                      FontSize="32" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"
                                      Margin="20"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Control Panel -->
        <Grid Height="100" 
             VerticalAlignment="Bottom" 
             Background="#FF1A1A1A">

            <!-- Song Info -->
            <StackPanel Orientation="Horizontal" 
                       VerticalAlignment="Center"
                       Margin="20,0,0,40">
                <Border Width="60" Height="60" 
                       Background="White"
                       CornerRadius="5">
                    <Image x:Name="imgThumbnail" 
                          Stretch="UniformToFill"
                          />
                </Border>

                <StackPanel Margin="15,0,0,0" 
                           VerticalAlignment="Center">
                    <TextBlock x:Name="txtSongTitle"
                              Text="Chuyện Chúng Ta Sau Này" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Foreground="White"/>
                    <TextBlock x:Name="txtArtist"
                              Text="Hà Đăng Quyền, Wean Le" 
                              FontSize="12" 
                              Foreground="#FF999999"
                              Margin="0,3,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Playback Controls -->
            <StackPanel Orientation="Vertical" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,10">

                <!-- Control Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10">
                    <Button Content="🔀" 
                           Style="{StaticResource PlayerButtonStyle}"
                           Width="35" Height="35" 
                           FontSize="16"
                           x:Name="btnShuffle"/>
                    <Button Content="⏮" 
                           Style="{StaticResource PlayerButtonStyle}"
                           Width="35" Height="35" 
                           FontSize="20"
                           Margin="10,0,0,0"
                           x:Name="btnPrevious"/>
                    <Button Content="⏸" 
                           Style="{StaticResource PlayerButtonStyle}"
                           Width="45" Height="45" 
                           FontSize="24"
                           Margin="10,0,0,0"
                           Background="#FFFFFFFF"
                           Foreground="Black"
                           x:Name="btnPlayPause"
                           Click="BtnPlayPause_Click"/>
                    <Button Content="⏭" 
                           Style="{StaticResource PlayerButtonStyle}"
                           Width="35" Height="35" 
                           FontSize="20"
                           Margin="10,0,0,0"
                           x:Name="btnNext"/>
                    <Button Content="🔁" 
                           Style="{StaticResource PlayerButtonStyle}"
                           Width="35" Height="35" 
                           FontSize="16"
                           Margin="10,0,0,0"
                           x:Name="btnRepeat"/>
                </StackPanel>

                <!-- Progress Bar -->
                <Grid Width="600">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtCurrentTime"
                              Text="0:46" 
                              Foreground="#FF999999"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                    <Slider Grid.Column="1"
                           x:Name="sliderProgress"
                           Minimum="0" 
                           Maximum="100" 
                           Value="20"
                           Style="{StaticResource CustomSliderStyle}"
                           VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                              x:Name="txtTotalTime"
                              Text="4:05" 
                              Foreground="#FF999999"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>

            <!-- Right Side Controls -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,20,40">
                <Button Content="🎵" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       x:Name="btnLyrics"/>
                <Button Content="📋" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       Margin="10,0,0,0"
                       x:Name="btnQueue"/>
                <Button Content="🔊" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       Margin="10,0,0,0"
                       x:Name="btnVolume"/>
                <Slider x:Name="sliderVolume"
                       Minimum="0" 
                       Maximum="100" 
                       Value="70"
                       Width="100"
                       Style="{StaticResource CustomSliderStyle}"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"/>
                <Button Content="⛶" 
                       Style="{StaticResource PlayerButtonStyle}"
                       Width="30" Height="30" 
                       FontSize="16"
                       Margin="10,0,0,0"
                       x:Name="btnFullscreen"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
