<Window x:Class="spotifree.MiniWeb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spotifree"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
    Width="360" Height="140" Background="#111" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="16" Background="#121212" BorderBrush="#202020" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <!-- drag bar cao hơn 1 chút -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- DRAG BAR -->
            <Border Grid.Row="0" Background="#00000022"
              MouseLeftButtonDown="DragBar_MouseLeftButtonDown" Padding="8,0">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Mini Player" Foreground="#DDD" Opacity="0.85"
                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="✕" Click="Close_Click" Width="28" Height="20"
                  Background="#222" Foreground="#EEE" BorderBrush="#333"
                  Cursor="Hand" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!-- WEBVIEW -->
            <wpf:WebView2 x:Name="miniWeb" Grid.Row="1"/>
        </Grid>
    </Border>
</Window>